{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "IdentityServer": {
    "Key": {
      "Type": "Development"
    }
  },

  "IdentityServer": {
    "Clients": {
      "ComicEngine.Graphql": {
        "Profile": "IdentityServerSPA",
        "AllowedScopes": [ "openid", "profile", "comic_api" ]
      }
    },
    "Resources": {
      "comic_api": {
        "Profile": "API",
        "AllowedScopes": "comic_api"
      }
    },
    "AllowedHosts": "*"
  }
}
